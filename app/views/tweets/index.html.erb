<h1>ツイート一覧</h1>

<p><%= notice %></p>

<table class="news">

<% @tweets.each do |tweet| %>
  <tr>
    <td><%= tweet.content %></td>
  </tr>

  <tr>
    <td><%= link_to "ツイートを編集する", edit_tweet_path(tweet.id), data: { confirm: '本当に編集していいですか？' }, :class => "editbutton" %></td>
    <td><%= link_to 'ツイートを削除する', tweet_path(tweet.id), method: :delete,data: { confirm: '本当に削除していいですか？' }, :class => "deletebutton" %></td>
  </tr>

  <tr>
    <td>　</td>
  </tr>
<% end %>

</table>
